{
    "name": "Novelty Extension",
    "author": "Ethan Dickson",
    "description": "An extension that does what it says on the box, and nothing more!!!",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "src/install.js"
    },
    "action": {
      "default_popup": "src/menu.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts":
    [

      {
        "matches": ["<all_urls>"],
        "js": ["src/smiley.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["<all_urls>"],
        "js": ["src/misc.js"],
        "run_at": "document_start"
      }
    ],
    "permissions": [
      "storage",
      "http://*/*", 
      "https://*/*",
      "webRequest",
      "webNavigation"
    ]
  }